# Application Settings
APP_NAME=AI-CLEAN-CPU
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO

# File Operation Settings
MAX_FILE_SIZE=500000000  # Maximum file size in bytes (500MB)
BACKUP_ENABLED=true
BACKUP_DIR=./backups
SAFE_MODE=true  # Enable additional safety checks

# AI Settings
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Paths
DEFAULT_SCAN_PATH=./
EXCLUDED_DIRS=node_modules,venv,.git
EXCLUDED_FILES=.env,.DS_Store,Thumbs.db

# Cleanup Settings
AUTO_CLEANUP=false
DRY_RUN=true  # Show what would be done without making changes
RECURSIVE_SCAN=true

# Logging Configuration
LOG_FILE=cleanup_assistant.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_RETENTION_DAYS=30

# Safety Settings
REQUIRE_CONFIRMATION=true
MAX_OPERATIONS_PER_BATCH=100
ROLLBACK_ENABLED=true 